extends ../layouts/default

block intro
	.container
		.row
				<br>
				h1.text-center Get in Touch
				<br>
		.row
			.col-md-6
				p.text-left
					| Complete the form below and we'll be in touch within 24 hours. <br>If you have an urgent request,
					| please call Andy directly at 512-318-0099.
			.col-md-6
					<br>
					p We're located in sunny Austin, TX.
				
		
block content
	.container
				if enquirySubmitted
					h3 Thanks for getting in touch.
				else
					.row
						.col-sm-8.col-md-6
							form(method='post')
								input(type='hidden', name='action', value='contact')
								.form-group(class=validationErrors.email ? 'has-error' : null)
									label Work Email
									input(type='email', name='email', value=formData.email).form-control
								.form-group
									label Phone
									input(type='text', name='phone', value=formData.phone, placeholder='(optional)').form-control
								.form-group(class=validationErrors.message ? 'has-error' : null)
									label How can we help?
									textarea(name='message', placeholder='I need conversions so badly...' rows=4).form-control= formData.message
								.form-actions
									button(type='submit').btn.btn-primary Send Me!
						.col-md-1
						.col-md-4
							<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d27567.537188113758!2d-97.75077239999993!3d30.267229500000003!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8644b5a09f79a589%3A0x4b5d42b7eafac86d!2sAustin%2C+TX+78701!5e0!3m2!1sen!2sus!4v1421619474917" width="400" height="300" frameborder="0" style="border:0"></iframe>
						.col-md-1

