    .modal-content
      .modal-header
        button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
        .modal-title Get a Free Evaluation
        .modal-sub-title Includes detailed analysis of your website's optimization potential
      .modal-body

        .uplift-form
          form(method='post')

            .input-group

              input(type='hidden', name='action', value='contact')

              .col-lg-12.col-md-12.col-sm-12.col-xs-12.col-no-padding(style="border-bottom: 1px solid #E2E2E2;")
                .input-home
                  label Work Email
                  input(type='email', name='email', value=formData.email).form-control

              .col-lg-12.col-md-12.col-sm-12.col-xs-12.col-no-padding
                .button-home
                  button(type='input', data-dismiss='modal', id='enquiry-form').submit.btn Send
